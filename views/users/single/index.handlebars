<div class="container profile-name-cover">
  {{#if user.coverPicture}}
    <img src = "{{user.coverPicture}}" class="cover-image"/>
  {{else}}
    <img src="/images/background.jpg" class="cover-image"/>
  {{/if}}
  <div class="row" align="center">
    <div class="col-md-4 col-md-push-4">
      {{#if user.profilePicture}}
        <img src= "{{user.profilePicture}}" class="profile-picture img-circle"/>
      {{else}}              
        <img src="/images/profile-default.jpg" class="profile-picture img-circle"/>
      {{/if}}
    </div>
  </div>
  <div class="row" align="center">
    <div class="col-md-6 col-md-push-3">
      <h1>{{ user.firstName }} {{ user.lastName }}</h1>
    </div>
  </div>
</div>
<div class="row" align="center">
	<div class="col-md-6">
		{{#if subscription}}
      <form class="form-group" action="/users/unfollow" method="post">
          <input type="hidden" name="UserId" value="{{user.id}}">       
          <input class="btn btn-info" type="submit" value="Unfollow">
      </form>
    {{else}}        
      <form class="form-group" action="/users/follow" method="post">
          <input type="hidden" name="UserId" value="{{user.id}}">				
          <input class="btn btn-info" type="submit" value="Follow">
      </form>
		{{/if}}			
	</div>
	<div class="col-md-6">
		<button class="btn btn-info">Donate</button>
	</div>
</div>
<div class="image_grid">
	{{#each photos}}
		<div class="col-md-4">
			<a href="/photos/{{this.id}}"><img class="img-responsive thumbnail" src={{this.image_url}} /> </a>
		</div>
	{{/each}}
</div>